<%- include('./partials/header.ejs') %>
    <section id="beer-create-page">
        <div class="fade-in">
            <header>
                <h1 class="beer-create-page-text">Create Beer</h1>
            </header>
            <div class="beer-create-ordering">
                <div class="beer-create-item">
                    <form class="form-create-beer-horizontal" action="/beer-add" method="POST">
                        <div class="beer-create-name">
                            <h2 class="beer-create-name-text">
                                <div class="beer-name-create-buttons">
                                    <div>
                                        Beer Name: 
                                        <input placeholder="Enter Beer Name" type="text" class="name-input" name="Name" size="10" required>
                                    </div>
                                </div>
                            </h2>
                        </div>
                        <div class="beer-create-card">                                
                            <div class="beer-create-column">
                                <p class="beer-edit-text-info"><b>Type:</b> <input placeholder="Enter type" type="text" class="name-input" name="Type" size="10" required></p>
                            </div>
                            <div class="beer-create-column">
                                <p class="beer-edit-text-info"><b>Cost:</b> <input placeholder="Enter Cost" type="text" class="name-input" name="Cost" size="10" required></p>
                            </div>
                            <div class="beer-create-column">
                                <p class="beer-edit-text-info"><b>Alc/Vol:</b> <input placeholder="Enter Alc/Vol" type="text" class="name-input" name="AlcVol" size="10" required></p>
                            </div>
                        </div>
                        <div class="beer-create-buttons">
                            <a id="beer-create-icon1" class="all-button-container-one" href="/beer">
                                <span class="beer-button-icon">Cancel</span>
                            </a>
                            <button type="submit" id="beer-create-icon2" class="all-button-container-two">
                                <span class="beer-button-icon">Create</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

<%- include('./partials/footer.ejs') %>