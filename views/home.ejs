<%- include('./partials/header.ejs') %>

<link rel=”stylesheet” href=”dist/scripts/tailwind.css”/>

<section id="home-page">
    <div>
        <header>
            <h1 class="home-text">Deja Brew</h1>
        </header>

        <div id="home-tops">
            <ul class="home-top-5s">
                <li>
                    <h3>Top Beers</h3>
                    <% topBeers.forEach(function(topBeers, i) { %>
                        <div><%= i+1 %> <%= topBeers.Name %></div>
                    <% }) %>
                </li>
                <li>
                    <h3>Top Bars</h3>
                    <% topBars.forEach(function(topBars, i) { %>
                        <div><%= i+1 %> <%= topBars.Name %></div>
                    <% }) %>
                </li>
                <li>
                    <h3>Top Breweries</h3>
                    <% topBreweries.forEach(function(topBreweries, i) { %>
                        <div><%= i+1 %> <%= topBreweries.Name %></div>
                    <% }) %>
                </li>
            </ul>
        </div>
    </div>
</section>

<%- include('./partials/footer.ejs') %>