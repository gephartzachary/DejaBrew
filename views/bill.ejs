
<%- include('./partials/header.ejs') %>
<section id="bill-page">
    <div>
        <header>
            <h1>
                Bills
            </h1>
        </header>
        <div class="bill-ordering">
            <div class="bill-buttons">
                <a id="bill-add" href="/bill-new">
                    Add
                </a>
            </div>
        </div>

        <div class="bill-items">
            <%if(billData.length != 0) { %>
                <% billData.forEach(function(billData) { %>
                    <div>
                        <div class="bill-title">
                            <h2 class="bill-title-text">
                                <div class="bill-title-and-buttons">
                                    <div class="bill-full-title">
                                        <%= billData.Name %> <%= billData.Price %>
                                    </div>
                                    <div class="bill-edit-remove-buttons">
                                        <a class="bill-edit-white bill-edit-remove" type="button" ><a class="department-edit-white department-edit-remove" type="button">

                                        </a>
                                        <a class="bill-edit-white bill-edit-remove bill-edit-pencil" href="/bill-edit/<%= billData.billID %>">
                                            <i class="fa-solid fa-pencil"></i>
                                        </a>
                                    </div>
                                </div>
                            </h2>
                        </div>
                    </div>
                <% }) %>
        </div>
    </div>
</section>
<%- include('./partials/footer.ejs') %>